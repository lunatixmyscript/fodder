            systemctl restart xray >> /dev/null 2>&1
            systemctl restart trojs >> /dev/null 2>&1
            systemctl restart atd >> /dev/null 2>&1
            send_log "trojan" "$user" "$iplimit" "$cekcek"
            echo "unlockxray trojan $user" | at now + 10 minutes
            systemctl restart xray >> /dev/null 2>&1
            systemctl restart trojs >> /dev/null 2>&1
        else
            echo ""
        fi
        sleep 0.1
    done
}
function lockssr() {
    echo -n > /var/log/xray/accessssr.log
    sleep 60
    declare -a data=($(ls /etc/lunatic/limit/shadowsocks/ip))
    for user in "${data[@]}"
    do
        iplimit=$(cat /etc/lunatic/limit/shadowsocks/ip/$user)
        ehh=$(cat /var/log/xray/accessssr.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)
        if [[ $cekcek -gt $iplimit ]]; then
            exp=$(grep -w "^#!# $user" "/etc/xray/ssr.json" | cut -d ' ' -f 3 | sort | uniq)
            sed -i "/#!# $user /{n;s/^/#/}" /etc/xray/ssr.json
            systemctl restart xray >> /dev/null 2>&1
            systemctl restart ssrjs >> /dev/null 2>&1
            systemctl restart atd >> /dev/null 2>&1
            send_log "shadowsocks" "$user" "$iplimit" "$cekcek"
            echo "unlockxray shadowsocks $user" | at now + 10 minutes
            systemctl restart xray >> /dev/null 2>&1
            systemctl restart ssrjs >> /dev/null 2>&1
        else
            echo ""
        fi
        sleep 0.1
    done
}
if [[ ${1} == "lockvme" ]]; then
lockvme
elif [[ ${1} == "lockvle" ]]; then
lockvle
elif [[ ${1} == "locktro" ]]; then
locktro
elif [[ ${1} == "lockssr" ]]; then
lockssr
fi
